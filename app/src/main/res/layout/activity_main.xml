<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/main"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bgcolor" />

            <FrameLayout
                android:id="@+id/img_pp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/pp"
                    app:civ_border_color="#99ffffff"
                    app:civ_border_width="2dp" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:text=" Lalu M. Fatwa Aulia"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp"
                android:text=" @l.m.fatwa"
                android:textColor="#ffffff"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_pp"
                android:layout_marginTop="120dp"
                android:text="follow"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_pp"
                android:layout_marginTop="145dp"
                android:text="488"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/follower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/follow"
                android:layout_marginTop="120dp"
                android:text="follower"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/follow"
                android:layout_marginTop="145dp"
                android:text="893"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />

            <Button
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginTop="210dp"
                android:layout_marginLeft="10dp"
                android:text="Follow"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:background="#00CCFF"
                android:layout_toRightOf="@+id/img_pp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/d1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="ITN Malang"/>
            <TextView
                android:id="@+id/d2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:text="T. Informatika S1"/>
            <TextView
                android:id="@+id/d3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="Lab. Robotika dan System Embeded"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="MASSAGE"
                android:drawableLeft="@drawable/chat"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="0px"
                android:background="@android:color/black"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_call"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="CALL"
                android:drawableLeft="@drawable/call"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="0px"
                android:background="@android:color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:drawableLeft="@drawable/email"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="0px"
                android:background="@android:color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
            android:id="@+id/tv_info"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="INFO"
            android:drawableLeft="@drawable/info"
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="0px"
                android:background="@android:color/black"/>

        </RelativeLayout>

    </LinearLayout>



</ScrollView>